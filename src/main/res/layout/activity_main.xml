<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boisko"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <!--linear dla team A-->

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Team A"
                    android:textColor="#616161"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingBottom="24dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="56dp" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/pilka"
                    android:onClick="addOneForTeamA" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yellow_a_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="fill"
                        android:paddingBottom="24dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="30dp"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/red_a_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="39dp"
                        android:layout_marginRight="9dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingRight="11dp"
                        android:gravity="left"
                        android:paddingBottom="24dp"
                        android:paddingLeft="80dp"

                        android:text="0"
                        android:textColor="#000000"

                        android:textSize="30dp" />

                    <ImageButton
                        android:id="@+id/yellow"
                        android:layout_width="40dp"
                        android:layout_height="60dp"

                        android:layout_below="@+id/yellow_a_card"
                        android:background="@drawable/yellowcard"
                        android:layout_alignRight="@id/yellow_a_card"



                        android:onClick="addyellowA"
                        android:paddingLeft="30dp"

                        />


                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_alignEnd="@+id/red_a_card"
                        android:layout_alignRight="@+id/red_a_card"


                        android:layout_below="@+id/red_a_card"
                        android:background="@drawable/redcard"
                        android:onClick="addredA" />


                </RelativeLayout>
            </LinearLayout>


            <!--linia-->


            <!--linear dla team B-->
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Team B"
                    android:textColor="#616161"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingBottom="24dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="56dp" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/pilka"
                    android:onClick="addOneForTeamB" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yellow_b_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="24dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="12dp"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/red_b_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="39dp"
                        android:layout_marginRight="9dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="24dp"
                        android:paddingLeft="80dp"
                        android:paddingRight="12dp"
                        android:text="0"
                        android:textColor="#000000"

                        android:textSize="30dp" />

                    <ImageButton

                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_alignRight="@+id/yellow_b_card"
                        android:layout_below="@+id/yellow_b_card"
                        android:layout_marginBottom="11dp"


                        android:background="@drawable/yellowcard"
                        android:onClick="addyellowB"
                        android:paddingLeft="30dp"

                        />


                    <ImageButton

                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_alignEnd="@+id/red_b_card"
                        android:layout_alignRight="@+id/red_b_card"

                        android:layout_below="@+id/red_b_card"
                        android:background="@drawable/redcard"
                        android:onClick="addredB" />


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


        <ImageButton
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="resetScore"
            android:background="@drawable/reset"
             />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
